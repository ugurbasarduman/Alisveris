@model IEnumerable<Anladim.Models.EntityFramework.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Kategori Yönetimi</h2>

@using (Html.BeginForm("Index", "AdminCategories", FormMethod.Get))
{
    <p>
        Isime Gore Aranacak: @Html.TextBox("searching")
        <input type="submit" value="ara" />
    </p>
}

<p>
    @Html.ActionLink("Yeni Kategorı Oluştur", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategoryName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.ActionLink("Düzenle", "Edit", new { id = item.CategoryId }) |
                @Html.ActionLink("Sıl", "Delete", new { id = item.CategoryId })
            </td>
        </tr>
    }

</table>
