@model IEnumerable<Anladim.Models.EntityFramework.Order>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Siparişler</h2>

<table class="table">
    <tr>
        <th>
            Sipariş Tarihi
        </th>
        <th>
            Toplam Ücret
        </th>
        <th>Detay</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalPrice)
            </td>
            <td>
                <a href="/order/detail/@item.OrderId">Siparis Detayi</a>
                @*@Html.ActionLink("Siparis Detayi","Detail","Order",new { id = item.OrderId })*@
            </td>
        </tr>
    }

</table>
