@using PagedList
@using PagedList.Mvc
@model IPagedList<Anladim.Models.EntityFramework.Product>
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.AscSortParm = "asc";
    ViewBag.DescSortParm = "desc";
}

<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet" />
<link href="~/Content/kalbi.css" rel="stylesheet" />
<div class="container bootdey">
    <div class="col-md-3">
        <section class="panel">
            <div class="panel-body">
                @using (Html.BeginForm("Index", "Home", FormMethod.Get))
                {
                    <div class="form-group">
                        @Html.TextBox("searching", ViewBag.CurrentFilter as string)
                        <button type="submit" value="Ara" class="btn btn-xs">Ara</button>
                    </div>
                }
            </div>
        </section>

            <div class="row">
                <div class="col-sm">
                    @using (Html.BeginForm("Index", "Home", FormMethod.Get, new { id = "Form1" }))
                    {
                        <div class="col-sm-8">
                            Sırala:
                            @Html.DropDownList("sortOrder", new List<SelectListItem>

                             {
                                new SelectListItem{ Text= "Pahalıdan Ucuza", Value = "desc" },
                                new SelectListItem{ Text= "Ucuzdan Pahalıya", Value = "asc" }
                             }, "-- Sırala --",new { @class="form-control"})

                        </div>
                        <br />
                        <div class="col-sm-3">
                            <div class="form-group">
                                    <input type="submit" class="btn btn-default" value="Filter" />
                            </div>
                        </div>
                    }
                </div>
            </div>
            <br />

