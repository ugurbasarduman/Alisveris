    </div>
    <div class="col-md-9">
        <section class="panel">
            <div class="panel-body">
                <div class="pull-left"> <h4>Ana Sayfa</h4></div>
            </div>
        </section>
        <div class="row product-list">
            @foreach (var item in Model)
            {

                <div class="col-md-4">
                    <section class="panel">
                        <div class="pro-img-box">
                            <img src="@item.Image" alt="250x220" />
                            @if (User.IsInRole("U"))
                            {
                                <a href="@Url.Action("OrderNow","Cart", new {id=item.ProductId })" id="addtocart" class="adtocart">
                                    <i class="fa fa-shopping-cart"></i>
                                </a>
                            }
                            else if (User.IsInRole("A"))
                            {
                                <a href="@Url.Action("OrderNow","Cart", new {id=item.ProductId })" id="addtocart" class="adtocart">
                                    <i class="fa fa-shopping-cart"></i>
                                </a>
                            }
                            else
                            {
                                <a href="/Security/Login" class="adtocart">
                                    <i class="fa fa-shopping-cart"></i>
                                </a>
                            }
                        </div>

                        <div class="panel-body text-center">
                            <h4>
                                <a href="@Url.Action("Details","Product",new {id = item.ProductId })" class="pro-title">
                                    @item.Name
                                </a>
                            </h4>
                            <h6>
                                @item.Category.CategoryName /
                                @item.Brand /
                                @item.Model
                            </h6>
                            <p class="price">@item.Price.ToString("##.## TL")</p>
                        </div>
                    </section>
                </div>}

        </div>

    </div>
    <br />


    @Html.PagedListPager(Model, page => Url.Action("Index",
        new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
</div>
