@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Ana Sayfa</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/PagedList.css" rel="stylesheet" />
    <link href="~/Content/StyleSheet1.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Ana Sayfa", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse" style="float:left">
                <ul class="nav navbar-nav">
                    @Html.Action("Menu", "Home")
                </ul>
            </div>

            <div style="color:white; float:right">

                @if (User.IsInRole("U"))
                {
                    <p>
                        <a href="/Profil">@HttpContext.Current.User.Identity.Name</a> |
                        <a href="/Cart">Sepetim</a> |
                        <a href="/Siparislerim">Siparislerim</a> |
                        @Html.ActionLink("Cıkış Yap", "Logout", "Security")
                    </p>
                }
                else if (User.IsInRole("A"))
                {
                    <p>
                        <a href="/Profil">@HttpContext.Current.User.Identity.Name</a> |
                        <a href="/Cart">Sepetim</a>
                        <a href="/Siparislerim">Siparislerim</a> |
                        @Html.ActionLink("Cıkış Yap", "Logout", "Security")
                    </p>
                }
                else
                {
                    <p>
                        @Html.ActionLink("Giris Yap", "Login", "Security") |
                        <a href="/KayitOl">Kayit Ol</a>
                    </p>
                }
            </div>

        </div>
    </div>
    <div class="container">
        <br />
        @if (User.IsInRole("A"))
        {
            <div class="container">
                @Html.ActionLink("Admin Paneli", "Index", "AdminProducts")
            </div>
        }
        @RenderBody()
    </div>




    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/Cart.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("Cart.js")
    @RenderSection("scripts", required: false)



</body>
</html>
